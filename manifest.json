{
	"manifest_version": 3,
	"name": "__MSG_extension_name__",
	"version": "1.0.0",
	"description": "__MSG_extension_description__",
	"permissions": ["storage"],
	"host_permissions": [
		"<all_urls>",
		"http://127.0.0.1:8765/*",
		"https://generativelanguage.googleapis.com/*",
		"https://api.openai.com/*",
		"https://api.anthropic.com/*"
	],
	"background": {
		"service_worker": "background/background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/content-main.js"],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"content/selection.js",
				"content/floating-button.js",
				"content/floating-panel.js",
				"utils/ai-service.js",
				"utils/ankiconnect.js",
				"utils/ankiconnect-proxy.js",
				"utils/field-handler.js",
				"utils/i18n.js",
				"utils/prompt-engine.js",
				"utils/providers.config.js",
				"utils/storage.js",
				"utils/template-store.js",
				"utils/error-boundary.js",
				"utils/formatter.js",
				"services/anki-service.js",
				"services/config-service.js",
				"_locales/*/messages.json",
				"icons/ANKI.svg"
			],
			"matches": ["<all_urls>"]
		}
	],
	"options_page": "options/options.html",
	"default_locale": "en",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
